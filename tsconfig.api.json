{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "api",
    "types": ["node"],
    "typeRoots": ["./api/types", "./node_modules/@types"]
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}